@model List<Ogrenci>
@{
    Layout = "_Layout1";
}

<h1>Öğrenci Listesi</h1>
<ul class="list-group">
    @foreach (Ogrenci ogr in Model)
    {
        <li class="list-group-item">@ogr.Ad @ogr.Soyad</li>
    }
</ul>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Ad</th>
            <th>Soyad</th>
            <th>İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Ogrenciid</td>
                <td>@item.Ad</td>
                <td>@item.Soyad</td>
                <td><a href="/Ogrenci/OgrenciDetay/@item.Ogrenciid">Detay</a></td>
            </tr>
        }
    </tbody>
</table>

